<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shape="rectangle">

            <solid
                android:color="#6EAFFF"/>

            <corners
                android:radius="14dp" />

            <size
                android:width="270dp"
                android:height="60dp" />

            <stroke
                android:width="3dp"
                android:color="#FF5722" />

        </shape>
    </item>
    <item>
        <shape
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shape="rectangle">

            <solid
                android:color="#FF5722"/>

            <corners
                android:radius="14dp" />

            <size
                android:width="270dp"
                android:height="60dp" />

            <stroke
                android:width="3dp"
                android:color="#6EAFFF" />

        </shape>
    </item>
</selector>
